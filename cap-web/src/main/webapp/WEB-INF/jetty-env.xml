<Configure class="org.mortbay.jetty.webapp.WebAppContext">
	<New id="comdb" class="org.mortbay.jetty.plus.naming.Resource">
		<Arg>jdbc/capdb</Arg>
		<Arg>
			<New class="com.mchange.v2.c3p0.ComboPooledDataSource">
				<Set name="driverClass">org.h2.Driver</Set>
				<Set name="jdbcUrl">jdbc:h2:../h2db/capdb</Set>
				<Set name="user">sa</Set>
				<Set name="password"></Set>
			</New>
		</Arg>
	</New>
	<Call name="getServletHandler">

	</Call>
	<Call name="addServlet">
		<Arg>
			<New class="org.mortbay.jetty.servlet.ServletHolder">
				<Arg>
					<Call class="java.lang.Class" name="forName">
						<Arg>org.mortbay.jetty.servlet.DefaultServlet</Arg>
					</Call>
				</Arg>
				<Call name="setInitParameter">
					<Arg>aliases</Arg>
					<Arg>true</Arg>
				</Call>
			</New>
		</Arg>
		<Arg>/</Arg>
	</Call>
</Configure>