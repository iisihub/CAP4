<sitemesh>
	<property name="decorators-file" value="/WEB-INF/sitemesh-decorators.xml" />
	<!-- Typically the <excludes /> block is just added at the start of the 
		decorators.xml file, however this is not a requirement and any other XML 
		file can be specified instead by changing the excludes file specified in 
		sitemesh.xml. This might be useful if for example the ConfigDecoratorMapper 
		is not being used in the deployment. -->
	<excludes file="${decorators-file}" />
	<!-- Decorator mappers will only be applied to responses of type text/html 
		or text/html;charset=ISO-8859-1. Responses of any other content type (eg 
		image/gif) will be ignored by Sitemesh. FastPageParser is a very fast HTML 
		parser. The alternative HTMLPageParser behaves similarly to the FastPageParser, 
		however it's a complete rewrite that is simpler to add custom features to 
		such as extraction and transformation of elements. -->
	<page-parsers>
		<parser default="true"
			class="com.opensymphony.module.sitemesh.parser.FastPageParser" />
		<parser content-type="text/html"
			class="com.opensymphony.module.sitemesh.parser.FastPageParser" />
		<parser content-type="text/html;charset=UTF-8"
			class="com.opensymphony.module.sitemesh.parser.FastPageParser" />
	</page-parsers>
	<!-- Assignment of decorators -->
	<decorator-mappers>
		<!-- <mapper class="com.opensymphony.module.sitemesh.mapper.ParameterDecoratorMapper"> 
			<param name="decorator.parameter" value="decorator" /> </mapper> -->
		<!-- parameter.name / parameter.value: The name and value of the request 
			parameter to be used for informing SiteMesh that we want a printable page. 
			In our example, all we have to do is pass printable=true in the query string. -->
		<!-- <mapper class="com.opensymphony.module.sitemesh.mapper.PrintableDecoratorMapper"> 
			<param name="decorator" value="none" /> <param name="parameter.name" value="printable" 
			/> <param name="parameter.value" value="true" /> </mapper> -->

		<mapper class="com.iisigroup.cap.sitemesh.mapper.CapI18nMapper">
			<param name="ignorePathReg" value="(page/index)" />
		</mapper>
		<mapper class="com.iisigroup.cap.sitemesh.mapper.CapRequestJSONMapper">
			<param name="decoratorFile" value="minimal,form,login"/>
			<param name="ignoreParams" value="_isAjax,formAction,_pa"/>
		</mapper>
		
		<mapper class="com.iisigroup.cap.sitemesh.mapper.CapSystemPropertiesJSONMapper">
			<param name="property.1" value="meta.decorator" />
			<param name="searchKeys" value="TIME_OUT"/>
		</mapper>

		<mapper class="com.opensymphony.module.sitemesh.mapper.PageDecoratorMapper">
			<param name="property.1" value="meta.decorator" />
			<!-- <param name="property.2" value="decorator" /> -->
		</mapper>

		<!-- ConfigDecoratorMapper is the default implementation of DecoratorMapper. 
			Reads decorators and mappings from the config property (default '/WEB- INF/decorators.xml'). -->
		<mapper
			class="com.opensymphony.module.sitemesh.mapper.ConfigDecoratorMapper">
			<param name="config" value="${decorators-file}" />
		</mapper>
	</decorator-mappers>
</sitemesh>