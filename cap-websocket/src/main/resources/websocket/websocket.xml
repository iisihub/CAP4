<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />
	<bean class="com.iisigroup.websocket.server.CapNettyWebSocketServer"></bean>
	
	<!-- Reminder -->
	<!-- @Controller -->
	<context:component-scan base-package="com.iisigroup.websocket.handler" />
	<!-- @Controller @Service -->
	<context:component-scan base-package="com.iisigroup.websocket.service" />
	<!-- @Task -->
	<bean id="reminderTask" class="com.iisigroup.websocket.timer.CapReminderTimerTask"></bean>

	<bean id="scheduledTimerTask" class="org.springframework.scheduling.timer.ScheduledTimerTask">
		<property name="timerTask" ref="reminderTask"></property>
		<property name="period" value="30000"></property>
		<property name="delay" value="1000"></property>
	</bean>

	<bean id="timerFactoryBean" class="org.springframework.scheduling.timer.TimerFactoryBean">
		<property name="scheduledTimerTasks">
			<list>
				<ref bean="scheduledTimerTask" />
			</list>
		</property>
	</bean>

	
</beans>